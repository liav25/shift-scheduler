{
  "name": "shift-scheduler",
  "version": "1.0.0",
  "description": "Full-stack shift scheduling application with queue-based fairness algorithm",
  "private": true,
  "scripts": {
    "predev": "npm run ensure-deps",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" --names \"backend,frontend\" --prefix-colors \"blue,green\" --kill-others-on-fail",
    "dev:backend": "cd backend && python3 main.py",
    "dev:frontend": "cd frontend && npm run dev",
    "postinstall": "npm run install:frontend",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && pip3 install -r requirements.txt",
    "ensure-deps": "npm run check-frontend-deps || npm run install:frontend",
    "check-frontend-deps": "cd frontend && npm list --depth=0 --silent",
    "setup": "npm run install:frontend && npm run install:backend",
    "build": "npm run ensure-deps && cd frontend && npm run build",
    "preview": "cd frontend && npm run preview",
    "start": "npm run dev",
    "start:prod": "concurrently \"npm run start:backend\" \"npm run start:frontend\" --names \"backend,frontend\" --prefix-colors \"blue,green\" --kill-others-on-fail",
    "start:backend": "cd backend && python3 main.py",
    "start:frontend": "cd frontend && npm run preview",
    "clean": "rm -rf frontend/node_modules frontend/dist backend/venv",
    "reset": "npm run clean && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "keywords": [
    "scheduling",
    "shift-management",
    "queue-algorithm",
    "react",
    "fastapi"
  ]
} 